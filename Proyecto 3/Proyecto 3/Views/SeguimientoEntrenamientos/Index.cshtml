@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">

                <head>

                    <meta charset="utf-8">
                    <meta http-equiv="X-UA-Compatible" content="IE=edge">
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <meta name="description" content="">
                    <meta name="author" content="">

                    <title>SB Admin 2 - Bootstrap Admin Theme</title>

                    <!-- Bootstrap Core CSS -->
                    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
                    <!-- MetisMenu CSS -->
                    <link href="~/css/metisMenu.min.css" rel="stylesheet" />

                    <!-- DataTables CSS -->
                    <link href="~/css/dataTables.bootstrap.css" rel="stylesheet" />

                    <!-- DataTables Responsive CSS -->
                    <link href="~/css/dataTables.responsive.css" rel="stylesheet" />

                    <!-- Custom CSS -->
                    <link href="~/css/sb-admin-2.css" rel="stylesheet" />

                    <!-- Custom Fonts -->
                    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
                    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
                    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
                    <!--[if lt IE 9]>
                        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
                        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
                    <![endif]-->

                </head>

                <body>

                    <div id="wrapper">

                        <!-- Navigation -->

                        <div class="navbar-default sidebar" role="navigation">
                            <div class="sidebar-nav navbar-collapse">
                                <ul class="nav" id="side-menu">
                                    <li class="sidebar-search">
                                        <div class="input-group custom-search-form">
                                            <input type="text" class="form-control" placeholder="Search...">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                        <!-- /input-group -->
                                    </li>

                                    <li>
                                        <a href="~/SeguimientoEntrenamientos/"><i class="fa fa-dashboard fa-fw"></i> Seguimiento a Entrenamientos</a>
                                    </li>
                                    <li>
                                        <a href="~/ReporteDeErrores/"><i class="fa fa-dashboard fa-fw"></i> Reporte de Errores</a>
                                    </li>
                                    <li>
                                        <a href="~/ReporteDeErrores/TabladeErrores"><i class="fa fa-dashboard fa-fw"></i> Tabla de Errores</a>
                                    </li>
                                    <li>
                                        <a href="~/PuntosDeContacto/"><i class="fa fa-dashboard fa-fw"></i> Puntos de Contacto</a>
                                    </li>

                                </ul>
                            </div>
                            <!-- /.sidebar-collapse -->
                        </div>

                        <div id="page-wrapper">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="page-header">Seguimiento a entrenamientos</h1>
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>
                            <!-- /.row -->
                            <div class="row">
                                @if (ViewBag.misEntrenamientos.Count == 0)
                                {
                                    <h3>No hay entrenamientos registrados </h3>
                                }
                                else {
                                    foreach (var entrenamiento in ViewBag.misEntrenamientos)
                                    {
                                        if (entrenamiento.trainingState == "Aprobado")
                                        {
                                        <div class="col-lg-4">
                                            <div class="panel panel-green">
                                                <div class="panel-heading">
                                                    @entrenamiento.Name - @entrenamiento.trainingState
                                                </div>
                                                <div class="panel-body">
                                                    <ul>
                                                        <li>
                                                            Fecha de inicio: @entrenamiento.StartDate
                                                        </li>
                                                        <li>
                                                            Duración: @entrenamiento.Duration
                                                        </li>
                                                        <li>
                                                            Calificación: @entrenamiento.calification
                                                        </li>
                                                    </ul>
                                                </div>

                                                
                                            </div>
                                        </div>

                                    }
                                    else if (entrenamiento.trainingState == "Cursando")
                                    {
                                        <div class="col-lg-4">
                                            <div class="panel panel-primary">

                                                <div class="panel-heading">
                                                    @entrenamiento.Name - @entrenamiento.trainingState 
                                                </div>
                                                <div class="panel-body">
                                                    <ul>
                                                        <li>
                                                            Fecha de inicio: @entrenamiento.StartDate
                                                        </li>
                                                        <li>
                                                            Duración: @entrenamiento.Duration
                                                        </li>
                                                        <li>
                                                            Calificación: @entrenamiento.calification
                                                        </li>
                                                    </ul>
                                                </div>
                                               
                                            </div>
                                        </div>
                                    }
                                    else if (entrenamiento.trainingState == "Reprobado")
                                    {
                                        <div class="col-lg-4">
                                            <div class="panel panel-red">

                                                <div class="panel-heading">
                                                    @entrenamiento.Name - @entrenamiento.trainingState
                                                </div>
                                                <div class="panel-body">
                                                    <ul>
                                                        <li>
                                                            Fecha de inicio: @entrenamiento.StartDate
                                                        </li>
                                                        <li>
                                                            Duración: @entrenamiento.Duration
                                                        </li>
                                                        <li>
                                                            Calificación: @entrenamiento.calification
                                                        </li>
                                                    </ul>
                                                </div>
                                               
                                            </div>
                                        </div>
                                    }

                                }
                                }
                                        </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="page-header">Otros productos que quizá te interesarían</h1>
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>
                            <!-- /.row -->
                            <div class="row">

                                @if (ViewBag.misProdRelacionados.Count == 0)
                                {
                                    <h3>No hay productos disponibles </h3>
                                }
                                else {
                                foreach (var producto in ViewBag.misProdRelacionados)
                                {
                                        <div class="col-lg-4">
                                            <div class="panel panel-info">
                                                <div class="panel-heading">
                                                    @producto.Name - @producto.Duration <button type="button" class="btn btn-primary btn-xs">Solicitar información</button>
                                                </div>
                                                <div class="panel-body">
                                                    <ul>
                                                        <li>
                                                            Fecha de inicio: @producto.StartDate
                                                        </li>
                                                        <li>
                                                            Duración: @producto.Duration
                                                        </li>
                                                        <li>
                                                            Cupo máximo: @producto.MaximumQuota
                                                        </li>
                                                    </ul>
                                                </div>


                                            </div>
                                        </div>
                                }}
                            </div>




                            
                        </div>
                        <!-- /#page-wrapper -->

                    </div>



                        <!-- /#wrapper -->
                        <!-- jQuery -->
                        <script src="~/Scripts/jquery.min.js"></script>
                        <!-- Bootstrap Core JavaScript -->
                        <script src="~/Scripts/bootstrap.min.js"></script>
                        <!-- Metis Menu Plugin JavaScript -->
                        <script src="~/Scripts/metisMenu.min.js"></script>
                        <!-- DataTables JavaScript -->
                        <script src="~/Scripts/jquery.dataTables.min.js"></script>
                        <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
                        <script src="~/Scripts/dataTables.responsive.js"></script>

                        <!-- Custom Theme JavaScript -->
                        <script src="~/Scripts/sb-admin-2.js"></script>

                        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
                        <script>
                            $(document).ready(function () {
                                $('#dataTables-example').DataTable({
                                    responsive: true
                                });
                            });
                        </script>

                    </body>

</html>




